{
  "name": "backend-learnings",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/server.js",
  "scripts": {
    "check-license": "license-checker --summary --failOn BSD",
    "dependency-updates": "ncu",
    "webpack": "webpack",
    "start": "npx ts-node-dev --respawn --transpile-only ./src/server.ts",
    "tsc": "tsc",
    "prod": "npm run lint && tsc && node ./build/src/server.js",
    "build": "npm audit && tsc",
    "test": "jest src",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write 'src/**/*.ts'",
    "sonar": "ts-node sonar-scanner.ts",
    "test-coverage": "nyc jest src",
    "test-coverage-html": "nyc --reporter=html jest src",
    "posttest-coverage-html": "open-cli ./coverage/index.html"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "qs": "^6.10.1",
    "serve-favicon": "^2.5.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/lusca": "^1.7.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.9",
    "@types/serve-favicon": "^2.5.3",
    "@types/shortid": "^0.0.29",
    "@types/sinon": "^10.0.6",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.3.4",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.0.3",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.5.0",
    "shortid": "^2.2.16",
    "sinon": "^12.0.1",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0",
